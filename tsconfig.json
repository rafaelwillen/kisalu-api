{
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules/**/*"],
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "removeComments": true,
    "sourceMap": true,
    "allowJs": true,
    "noEmit": true,
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}